# vim:fileencoding=utf-8:filetype=config
{{- if eq .chezmoi.os "linux" }}

pinentry-program /usr/bin/pinentry-gnome3

{{- else if eq .chezmoi.os "darwin" }}

pinentry-program /opt/homebrew/bin/pinentry-mac

{{- end }}

