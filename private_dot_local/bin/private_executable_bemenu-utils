#!/usr/bin/env bash
set -euxo pipefail

export BEMENU_OPTS='
  --ignorecase
  --line-height 30
  --tb #282a36 --tf #ff6ac1
  --hb #ff6ac1 --hf #282a36
  --nb #282a36 --nf #eff0eb
  --fb #282a36 --ff #eff0eb
  --fn "pango:Cantarell 14"
'

function calc() {
  # Based on https://github.com/barbuk/menu-qalc
  # which is based on https://github.com/onespaceman/menu-calc
  local answer=""
  local opt_copy=" Copy "
  local opt_clear=" Clear "

  if [ -n "${1-}" ]; then
    answer=$(echo "$1" \
      | qalc +u8 -color=never -terse \
      | awk '!/^>/ && !/^$/ {gsub(/^[ \t]+|[ \t]+$/, "", $0); print}'
    )
  fi

  local action=$(echo -e "$opt_copy\n$opt_clear" \
    | bemenu --prompt "= $answer"
  )

  case $action in
    "$opt_copy") echo -n "$answer" | wl-copy ;;
    "$opt_clear") $0 calc ;;
    "") ;;
    *) $0 calc "$action" "$@" ;;
  esac
}

function emoji() {
  # Based on https://github.com/dln/wofi-emoji
  cat "$XDG_DATA_HOME/emoji.txt" \
    | bemenu --prompt 'emoji' \
    | cut -d ' ' -f 1 \
    | tr -d '\n' \
    | wl-copy
}

function launcher() {
  bemenu --prompt 'ðŸ”Ž'
}

function pass() {
  BEMENU_OPTS="$BEMENU_OPTS --prompt pass" tessen
}

function quickphrase() {
  cat /usr/share/fcitx5/data/quickphrase.d/emoji-eac.mb \
    | sed -r 's/:(.*):\s*(.*)/\2 \1/gi; s/_/ /gi' \
    | bemenu --prompt 'quickphrase' \
    | cut -d ' ' -f 1 \
    | tr -d '\n' \
    | wl-copy
}

function main() {
  local sub_command=${1-}
  shift

  case "$sub_command" in
    launcher) launcher ;;
    calc) calc "$@" ;;
    emoji) emoji ;;
    pass) pass ;;
    quickphrase) quickphrase ;;
    *) ;;
  esac
}

main "$@"
