# vim:filetype=config
default partial alphanumeric_keys
xkb_symbols "basic" {
  # Navigate with AltGr + Vim keys
  key <AC06> { [ h, H,          Left,   Left    ] };
  key <AC07> { [ j, J,          Down,   Down    ] };
  key <AC08> { [ k, K,          Up,     Up      ] };
  key <AC09> { [ l, L,          Right,  Right   ] };
  key <AE10> { [ 0, parenright, Home,   Home    ] };
  key <AE04> { [ 4, sterling ,  End,    dollar  ] };
};
