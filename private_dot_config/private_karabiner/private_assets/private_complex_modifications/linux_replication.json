      "description": "Linux - Avoid accidental Cmd+h/q/w",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [{ "key_code": "vk_none" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "q",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [{ "key_code": "vk_none" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "w",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [{ "key_code": "vk_none" }],
          "type": "basic"
        }
      ]
    },
