{{- if eq .chezmoi.hostname "PF3XSEPR" }}
font              = OperatorMono Nerd Font Book:size=14
font-bold         = OperatorMono Nerd Font Medium:size=14
font-italic       = OperatorMono Nerd Font Book:slant=italic:size=14
font-bold-italic  = OperatorMono Nerd Font Medium:slant=italic:size=14
{{- else }}
font              = OperatorMono Nerd Font Book:size=12
font-bold         = OperatorMono Nerd Font Medium:size=12
font-italic       = OperatorMono Nerd Font Book:slant=italic:size=12
font-bold-italic  = OperatorMono Nerd Font Medium:slant=italic:size=12
{{- end }}

# To display bright colors correctly
bold-text-in-bright = palette-based

[scrollback]
lines = 10000

[cursor]
style = block
blink = yes

[mouse]
hide-when-typing = yes

[colors]
foreground  = eff0eb
background  = 282a36

# Reverse fg & bg when selection
selection-foreground  = 282a36
selection-background  = eff0eb

# Black
regular0    = 282a36
bright0     = 686868

# Red
regular1    = ff5c57
bright1     = ff5c57

# Green
regular2    = 5af78e
bright2     = 5af78e

# Yellow
regular3    = f3f99d
bright3     = f3f99d

# Blue
regular4    = 57c7ff
bright4     = 57c7ff

# Magenta
regular5    = ff6ac1
bright5     = ff6ac1

# Cyan
regular6    = 9aedfe
bright6     = 9aedfe

# White
regular7    = eff0eb
bright7     = eff0eb
