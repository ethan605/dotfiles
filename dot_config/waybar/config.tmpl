// vim:fileencoding=utf-8:syntax=json5
[
{{- if eq .chezmoi.hostname "PF3XSEPR" }}
  {
    // Vertical layout
    "output": ["Dell Inc. DELL U2419H CF6CV13"],
    "position": "top",
    "layer": "bottom",
    "height": 30,
    "include": [
      "~/.config/waybar/modules"
    ],

    "modules-left": [
      "sway/workspaces",
      "sway/mode"
    ],
    "modules-center": [
      "idle_inhibitor",
      "clock"
    ],
    "modules-right": [
      "pulseaudio",
      "tray",
      "custom/arch"
    ],
  },
{{- end }}
  {
    {{- if eq .chezmoi.hostname "PF3XSEPR" }}
    "output": "!Dell Inc. DELL U2419H CF6CV13",
    {{- end }}
    "position": "top",
    "layer": "bottom",
    "height": 30,
    "include": [
      "~/.config/waybar/modules"
    ],

    "modules-left": [
      "sway/workspaces",
      "sway/mode",
      "mpd"
    ],
    "modules-center": [
      "idle_inhibitor",
      "clock"
    ],
    "modules-right": [
      "custom/vpn",
      {{- if eq .chezmoi.hostname "lunarch" }}
      "custom/nordlynx",
      {{- end }}
      "network",
      "cpu",
      "memory",
      "temperature",
      "pulseaudio",
      {{- if eq .chezmoi.hostname "PF3XSEPR" }}
      "backlight",
      "battery",
      "custom/performance-mode",
      {{- end }}
      "tray",
      "custom/arch"
    ],

    "temperature": {
  {{- if eq .chezmoi.hostname "lunarch" }}
      "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
  {{- end }}
      "critical-threshold": 80,
      "interval": 5,
      "format": "{icon}  {temperatureC}°C",
      "format-icons": [
        "",
        "",
        "",
        "",
        "" 
      ],
      "on-click": "foot /usr/bin/zsh -c 'sensors | less'",
      "tooltip": true
    },
  }
]
