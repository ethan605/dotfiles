# vim:fileencoding=utf-8:filetype=config:foldenable:foldmethod=marker:foldmarker=[[[,]]]

# [[[ Variables

# Super key as modifier
set $mod    Mod4

# Home row direction keys, like vim
set $left   h
set $down   j
set $up     k
set $right  l

# Extra workspaces
set $wsf1   "11:  ₁"
set $wsf2   "12:  ₂"
set $wsf3   "13:  ₃"
set $wsf4   "14:  ₄"
set $wsf5   "15:  ₅"
set $wsf6   "16:  ₆"
set $wsf7   "17:  ₇"
set $wsf8   "18:  ₈"
set $wsf9   "19:  ₉"
set $wsf10  "20:  ₀"
set $wsf11  "21:  ₁"
set $wsf12  "22:  ₂"

# ]]]

# [[[ UIs

# Font family & size
font pango:Cantarell 12

# Hide title bar
default_border pixel      1
default_floating_border   normal
hide_edge_borders         smart

set $black  #282a36
set $blue   #57c7ff
set $gray   #d8d8d8
set $red    #ff5c57
set $white  #eff0eb

# Colors                  border  bg      text    indi    childborder
client.focused            $blue   $blue   $white  $gray   $blue
client.focused_inactive   $black  $black  $white  $black  $black
client.unfocused          $black  $black  $white  $black  $black
client.urgent             $red    $red    $white  $red    $red

# Cursors
seat seat0 xcursor_theme Breeze_Snow 32

# GTK3 themes
set $gnome-schema org.gnome.desktop.interface

exec_always {
  gsettings set $gnome-schema gtk-theme     'Breeze-Dark'
  gsettings set $gnome-schema icon-theme    'breeze-dark'
  gsettings set $gnome-schema cursor-theme  'Breeze_Snow'
  gsettings set $gnome-schema font-name     'Cantarell 12'
}

# Force floating mode by applications
for_window [app_id="blueman-assistant"]           floating enable
for_window [app_id="blueman-manager"]             floating enable
for_window [app_id="ibus-extension-gtk3"]         floating enable
for_window [app_id="mpv"]                         floating enable
for_window [app_id="pavucontrol"]                 floating enable
for_window [app_id="solaar"]                      floating enable
for_window [app_id="telegramdesktop"]             floating enable
for_window [app_id="virt-manager"]                floating enable
for_window [app_id="zoom"]                        floating enable
for_window [app_id="org.fcitx.fcitx5-config-qt"]  floating enable
for_window [instance="megasync"]                  floating enable

# Assign workspaces for non-terminal stuffs
assign [app_id="firefox(developeredition)*"]    workspace $wsf1
assign [app_id="thunderbird"]                   workspace $wsf2
assign [app_id="google-chrome"]                 workspace $wsf3
assign [instance="slack"]                       workspace $wsf4
assign [app_id="zoom"]                          workspace $wsf5
assign [app_id="telegramdesktop"]               workspace $wsf6
assign [instance="postman"]                     workspace $wsf7
assign [instance="spotify"]                     workspace $wsf8

# Google Chrome instance for tests
assign [instance="google-chrome"]               workspace 10

# ]]]

